# ── PostgreSQL Database ──────────────────────────────────
# Format: postgresql://<user>:<password>@<host>:<port>/<database>
DATABASE_URL=postgresql://postgres:your_password_here@localhost:5432/voice_vault
DB_POOL_MIN=2
DB_POOL_MAX=10

# ── Server ───────────────────────────────────────────────
PORT=3000
NODE_ENV=development

# ── JWT Authentication ───────────────────────────────────
JWT_SECRET=dev-secret-change-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# ── Anthropic API ────────────────────────────────────────
ANTHROPIC_API_KEY=

# ── CORS ─────────────────────────────────────────────────
CORS_ORIGIN=*

# ── Rate Limiting ────────────────────────────────────────
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
AUTH_RATE_LIMIT_MAX=5
